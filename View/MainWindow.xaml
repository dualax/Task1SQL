<Window x:Class="Task1SqlServer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:Task1SqlServer"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        Title="MainWindow"
        Height="550"
        Width="950"
        FontFamily="Consolas">
    <Grid Background="#f5f5dc">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="420"/>
            <ColumnDefinition Width="540"/>
        </Grid.ColumnDefinitions>
        <StackPanel HorizontalAlignment="Center"
                    Margin="5 20 5 0"
                    Grid.Column="0">
            <TextBlock Text="Button с Button"
                       FontSize="30"
                       Effect="{StaticResource MaterialDesignElevationShadow1}"
                       Foreground="#874c1b"
                       FontWeight="SemiBold"
                       Margin="0 0 0 10"/>
            <TextBlock TextWrapping="Wrap"
                       FontSize="25"
                       Foreground="#b36424"
                       FontWeight="Light"
                       Text="Наш Button хотя бы не ломается!"
                       Effect="{StaticResource MaterialDesignElevationShadow1}"/>
            <Image Grid.Column="0"
                   Height="419"
                   Source="/Images/vecteezy_bakery-and-pastry-product-clipart-design-illustration_9391372.png"
                   HorizontalAlignment="Center"/>
        </StackPanel>

        <Border HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Width="510"
                    Height="500"
                    CornerRadius="26"
                    Grid.Column="1"
                    Background="Wheat"
                    Effect="{StaticResource MaterialDesignElevationShadow1}"
                    Margin="10,0,0,0">

            <Grid Grid.Column="1">

                <Grid.RowDefinitions>
                    <RowDefinition Height="70"/>
                    <RowDefinition Height="350"/>
                    <RowDefinition Height="90"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Row="0"
                               Grid.Column="1"
                               Text="Создать учётную запись"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               FontSize="30"
                               FontWeight="SemiBold"
                               Foreground="#874c1b"
                               Effect="{StaticResource MaterialDesignElevationShadow1}"/>

                <StackPanel Grid.Row="1"
                                Grid.Column="1"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal">

                            <materialDesign:PackIcon Kind="Person"
                                             Margin="0 0 3 0"
                                             Width="25"
                                             Height="25"/>
                            <TextBox Width="145"
                             FontSize="17"
                             Name="TbLogin"
                             materialDesign:HintAssist.HelperText="Не менее 5 символов"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.Hint="Введите логин"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal"
                            Margin="20 0 0 0">
                            <materialDesign:PackIcon Kind="Password"
                                             Margin="0 0 3 0"
                                             Width="25"
                                             Height="25"/>
                            <PasswordBox Width="150"
                                 FontSize="17"
                                 Name="PbPassword"
                                 materialDesign:TextFieldAssist.HasClearButton="True"
                                 materialDesign:HintAssist.Hint="Введите пароль"
                                 materialDesign:HintAssist.HelperText="Не менее 8 символов"/>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"  
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                Margin="0 30 0 0">
                        <materialDesign:PackIcon Kind="Phone"
                                                 Margin="0 0 3 0"
                                                 Width="25"
                                                 Height="25"/>
                        <TextBox Width="345"
                                 FontSize="17"
                                 Name="TbPhone"
                                 materialDesign:HintAssist.HelperText="В формате +7-(777)-777-77-77"
                                 materialDesign:TextFieldAssist.HasClearButton="True"
                                 materialDesign:HintAssist.Hint="Введите мобильный номер телефона"
                               />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Margin="0 30 0 0">
                        <materialDesign:PackIcon Kind="Email"
                                                Margin="0 0 3 0"
                                                Width="25"
                                                Height="25"/>
                        <TextBox Width="345"
                                 FontSize="17"
                                 Name="TbEmail"
                                 materialDesign:HintAssist.HelperText="test@dkit.ru"
                                 materialDesign:TextFieldAssist.HasClearButton="True"
                                 materialDesign:HintAssist.Hint="Введите адрес электронной почты"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal"
                                Margin="0 30 0 0">
                        <CheckBox Content="Политика конфиденциальности информации"
                                  IsChecked="True"
                                  Background="Black"
                                  IsEnabled="False"/>
                    </StackPanel>
                    <CheckBox Content="Продублировать регистрационные данные на Email"
                                      IsChecked="True"
                                      Cursor="Hand"
                                      Background="Black"
                                      Height="21"
                                      Width="400"/>

                    <StackPanel Orientation="Horizontal"
                                    Margin="0 50 10 0"/>
                    <Separator Background="Gray"
                               Height="5"
                               Width="350"
                               Grid.Column="1"
                               Grid.Row="1"
                               VerticalAlignment="Bottom"/>
                    <StackPanel Grid.Column="1"
                                Grid.Row="2"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                Orientation="Horizontal"/>
                    <Button BorderBrush="Black"
                            BorderThickness="1"
                            x:Name="BtnCreat"
                            Click="BtnCreat_Click"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            materialDesign:ButtonProgressAssist.Value="-1"
                            materialDesign:ButtonProgressAssist.IndicatorBackground="Transparent"
                            materialDesign:ButtonProgressAssist.IndicatorForeground="Black"
                            materialDesign:ButtonProgressAssist.IsIndicatorVisible="True"
                            materialDesign:ButtonProgressAssist.IsIndeterminate="True"
                            IsEnabled="{Binding DataContext.ControlsEnabled,
                                                RelativeSource={RelativeSource FindAncestor,
                                                AncestorType=Window}}">
                        <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Create"/>
                                    <TextBlock Text="Создать учётную запись"/>
                        </StackPanel>
                    </Button>
                    <TextBlock TextAlignment="Center"
                                       VerticalAlignment="Center"
                                       Margin="10 0 0 0">
                                 <Run>Или войти в </Run>
                                 <Run TextDecorations="Underline"
                                 FontWeight="SemiBold"
                                 Cursor="Hand"
                                 MouseLeftButtonDown="Run_MouseLeftButtonDown">Систему</Run>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
